<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nameFragment">

    <!--  os action definen as accións de navegación dende un fragmento cara outro
    argument define o argumento que se pasa ao seguinte fragmento ou se recibe dende o anterior
    -->

    <fragment
        android:id="@+id/nameFragment"
        android:name="com.example.halloween.NameFragment"
        android:label="NameFragment"
        tools:layout="@layout/fragment_name">
        <action
            android:id="@+id/action_nameFragment_to_themeFragment"
            app:destination="@id/themeFragment">
            <argument
                android:name="userName"
                app:argType="string"/>
        </action>
    </fragment>
    <fragment
        android:id="@+id/themeFragment"
        android:name="com.example.halloween.ThemeFragment"
        android:label="fragment_theme"
        tools:layout="@layout/fragment_theme" >
        <argument
            android:name="userName"
            app:argType="string"/>
        <action
            android:id="@+id/action_themeFragment_to_storyFragment"
            app:destination="@id/storyFragment" >
            <argument
                android:name="userName"
                app:argType="string"/>
            <argument
                android:name="themeSelected"
                app:argType="string" />
            </action>
    </fragment>
    <fragment
        android:id="@+id/storyFragment"
        android:name="com.example.halloween.StoryFragment"
        android:label="fragment_story"
        tools:layout="@layout/fragment_story" >
        <argument
            android:name="userName"
            app:argType="string"/>
        <argument
            android:name="themeSelected"
            app:argType="string" />
        <action
            android:id="@+id/action_storyFragment_to_nameFragment"
            app:destination="@id/nameFragment"
            app:popUpTo="@id/nameFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>